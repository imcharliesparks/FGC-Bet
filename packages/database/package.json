{
  "name": "@repo/database",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "db:generate": "prisma generate --config prisma.config.ts",
    "db:push": "prisma db push --config prisma.config.ts && prisma generate --config prisma.config.ts",
    "db:studio": "prisma studio --config prisma.config.ts",
    "db:seed": "bun run seed.ts",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.11.10",
    "prisma": "^7.3.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
